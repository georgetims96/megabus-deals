<!DOCTYPE html>
<html>
  <head>
    <title>1-Dollar Journeys</title>
    <%- include('partials/head.ejs') %>
  </head>
<body>
  <div class="container-fluid w-75">
    <div class"row">
      <div class="column">
        <h1 class="text-primary text-center">Megabus Deals</h1>
      </div>
    </div>
    <% if (outJourneys.length > 0) { %>
    <div class="row">
      <h4 class="text-muted text-center">
        <%= outJourneys[0].origin.cityName %> - <%= outJourneys[0].destination.cityName %>
      </h4>
    </div>
    <% } %>
    <div class="row">
      <div class="accordion" id="journeyInformation" >
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              Out Journey
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#journeyInformation" style="">
            <div class="accordion-body">
              <ul>
              <% outJourneys.forEach(journey => { %>
                <li>  
                  <%= journey.departureDateTime  %>
                  , <%= journey.price %>
                </li>
              <% }); %> 
              </ul>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              Return Journey
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#journeyInformation" style="">
            <div class="accordion-body">
              <ul> 
                <% returnJourneys.forEach(journey => { %>
                <li>  
                  <%= journey.departureDateTime %>
                  , <%= journey.price %>
                </li>    
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/script.ejs') %>
  </body>
</html>
